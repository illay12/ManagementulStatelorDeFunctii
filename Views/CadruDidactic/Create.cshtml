@using ManagementulStatelorDeFunctii.ViewModels
@model CadruDidacticFormViewModel

<h2>Adaugă Cadru Didactic</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CadruDidactic.Nume"></label>
        <input asp-for="CadruDidactic.Nume" class="form-control" />
        <span asp-validation-for="CadruDidactic.Nume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CadruDidactic.GradDidacticId">Grad Didactic</label>
        <select asp-for="CadruDidactic.GradDidacticId" asp-items="Model.GradeDisponibile" class="form-control"></select>
        <span asp-validation-for="CadruDidactic.GradDidacticId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CadruDidactic.DepartamentId">Departament</label>
        <select asp-for="CadruDidactic.DepartamentId" asp-items="Model.DepartamenteDisponibile" class="form-control"></select>
        <span asp-validation-for="CadruDidactic.DepartamentId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Salvează</button>
</form>
