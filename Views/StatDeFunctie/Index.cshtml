@model IEnumerable<ManagementulStatelorDeFunctii.ViewModels.ProfesorDisciplinePeStatViewModel>

@{
    ViewData["Title"] = "Profesori și Discipline";
}

<a asp-action="ListaState" class="btn btn-secondary mb-3">
    &larr; Înapoi la lista statelor
</a>

<h2 class="mb-4">Profesori și Discipline pe Statul de Funcție @ViewBag.AnStat </h2>

<div class="d-flex justify-content-between mb-4">
    <a asp-controller="Norma" asp-action="CreazaNorma"
       asp-route-statDeFunctieId="@ViewBag.StatDeFunctieId"
       class="btn btn-success">
        ➕ Adaugă normă
    </a>
    <div>
        <a asp-controller="Norma" asp-action="AfiseazaNormeVacante" 
           asp-route-statDeFunctieId="@ViewBag.StatDeFunctieId"  
            class="btn btn-primary rounded-pill shadow-sm">
            Norme Vacante
        </a>
        <a asp-controller="PlataCuOra" asp-action="Index" 
           asp-route-statDeFunctieId="@ViewBag.StatDeFunctieId" asp-route-semestru="1"  
            class="btn btn-primary rounded-pill shadow-sm">
            PlataCuOra SEM I
        </a>
        <a asp-controller="PlataCuOra" asp-action="Index" 
           asp-route-statDeFunctieId="@ViewBag.StatDeFunctieId" asp-route-semestru="2"  
            class="btn btn-primary rounded-pill shadow-sm">
            PlataCuOra SEM II
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">Nu există cadre didactice asociate pentru acest stat.</div>
}
else
{
    <div class="row row-cols-1 g-4">
        @foreach (var profesor in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h4 class="card-title mb-0">@profesor.NumeProfesor</h4>
                                <h5 class="card-subtitle text-muted">@profesor.Grad</h5>
                            </div>
                            <a asp-controller="Norma" asp-action="Edit"
                            asp-route-cadruDidacticId="@profesor.CadruDidacticId"
                            asp-route-statDeFunctieId="@ViewBag.StatDeFunctieId"
                            class="btn btn-outline-primary btn-sm mt-1">
                                Editează normă
                            </a>
                        </div>

                        @{
                            double totalOreConv = 0;
                        }

                        <div class="table-responsive">
                            <table class="table table-borderless table-striped align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Disciplina</th>
                                        <th>Program de Studii</th>
                                        <th>An</th>
                                        <th>Numar Grupe</th>
                                        <th>Numar de saptamani</th>
                                        <th>Semestru</th>
                                        <th>Total Ore Conv./sapt</th>
                                        <th>Activitate Teoretica</th>
                                        <th>K*</th>
                                        <th>Total Ore Conv./sapt</th>
                                        <th>Activitate Practica</th>
                                        <th>K*</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var disciplina in profesor.DisciplineActivitati)
                                    {
                                        var oreTeor = (double)disciplina.ActivitateTeoretica / 2 * (double)disciplina.KCoeficientActTeoretica * (double)disciplina.NumarSaptamaniActivitate / 14.0;
                                        var orePract = (double)disciplina.ActivitatePractica / 2 * disciplina.NumarGrupe * (double)disciplina.KCoeficientActPractica * disciplina.NumarSaptamaniActivitate / 14.0;
                                        totalOreConv += oreTeor + orePract;

                                        <tr>
                                            <td>@disciplina.DenumireDisciplina</td>
                                            <td>@disciplina.ProgramDeStudiu</td>
                                            <td>@disciplina.AnStudiu</td>
                                            <td>@disciplina.NumarGrupe</td>
                                            <td>@disciplina.NumarSaptamaniActivitate</td>
                                            <td>@disciplina.Semestru</td>
                                            <td>@oreTeor.ToString("0.##")</td>
                                            <td>@disciplina.ActivitateTeoretica</td>
                                            <td>@disciplina.KCoeficientActTeoretica.ToString("0.##")</td>
                                            <td>@orePract.ToString("0.##")</td>
                                            <td>@(disciplina.ActivitatePractica * disciplina.NumarGrupe)</td>
                                            <td>@disciplina.KCoeficientActPractica.ToString("0.##")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <strong>Total Ore Conv. per saptamana (Teorie + Practica):</strong>
                            <span class="text-primary">@totalOreConv.ToString("0.##")</span>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
}
