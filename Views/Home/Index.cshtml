@{
    ViewData["Title"] = "Pagina Principală";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold">M.O.S.F.E.</h1>
        <p class="lead text-muted">Administrează eficient statele de funcții și cadrele didactice.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Statul de Funcții</h5>
                    <p class="card-text text-muted">Vizualizează, editează și gestionează statele de funcții pentru fiecare an.</p>
                    <a asp-controller="StatDeFunctie" asp-action="ListaState" class="btn btn-primary w-100">
                        Accesează
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Cadre Didactice</h5>
                    <p class="card-text text-muted">Consultă lista completă a profesorilor și detaliile asociate.</p>
                    <a asp-controller="CadruDidactic" asp-action="Index" class="btn btn-secondary w-100">
                        Accesează
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
