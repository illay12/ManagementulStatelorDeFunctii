@model EditareNormaViewModel

<h2>Editare normă pentru @Model.NumeProfesor</h2>

<h4>Discipline asociate</h4>
<ul>
    @foreach (var disc in Model.DisciplineAsociate)
    {
        <li>
            @disc.Denumire
            <form asp-action="EliminaDisciplina" method="post" style="display:inline;">
                <input type="hidden" name="cadruDidacticId" value="@Model.CadruDidacticId" />
                <input type="hidden" name="disciplinaId" value="@disc.DisciplinaId" />
                <input type="hidden" name="statDeFunctieId" value="@Model.StatDeFunctieId" />
                <button type="submit" class="btn btn-sm btn-danger">Șterge</button>
            </form>
        </li>
    }
</ul>

<h4>Adaugă disciplină</h4>
<form asp-action="AsociazaDisciplinaNorma" method="get">
    <input type="hidden" name="cadruDidacticId" value="@Model.CadruDidacticId" />

    <div class="form-group">
        <label>Disciplină disponibilă</label>
        <select name="disciplinaId" class="form-control" asp-items="Model.DisciplineDisponibile"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Continuă spre detalii</button>
</form>

