@model IEnumerable<ManagementulStatelorDeFunctii.Models.CadruDidactic>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Cadre Didactice</h2>
    <div>
        <a asp-action="Create" class="btn btn-success me-2">
            <i class="bi bi-plus-lg"></i> Adaugă Cadru
        </a>
        <a asp-action="AsociazaCadruStat" class="btn btn-secondary">
            <i class="bi bi-link-45deg"></i> Asociază la Stat de Funcție
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nume</th>
            <th>Grad Didactic</th>
            <th>Departament</th>
            <th style="width: 160px;">Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cadru in Model)
        {
            <tr>
                <td>@cadru.Nume</td>
                <td>@cadru.GradDidactic?.NumeGrad</td>
                <td>@cadru.Departament?.DenumireDepartament</td>
                <td>
                    <a asp-action="EditCadru" asp-route-id="@cadru.CadruDidacticId" class="btn btn-sm btn-primary me-2">
                        <i class="bi bi-pencil-square"></i> Editare
                    </a>
                    <form asp-action="DeleteCadru" asp-route-id="@cadru.CadruDidacticId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Ești sigur că vrei să ștergi acest cadru?');">
                            <i class="bi bi-trash"></i> Ștergere
                        </button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
