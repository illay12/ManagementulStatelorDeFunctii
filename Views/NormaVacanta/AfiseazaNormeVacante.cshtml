@model IEnumerable<ManagementulStatelorDeFunctii.ViewModels.NormaVacantaViewModels.NormaVacantaCuDisciplineViewModel>

@{
    ViewData["Title"] = "Norme Vacante";
}

<a asp-controller="StatDeFunctie"
   asp-action="Index"
   asp-route-id="@ViewBag.StatDeFunctieId"
   class="btn btn-secondary mb-3">
    &larr; Înapoi la Statul De Funcție
</a>

<h2 class="mb-4">Norme Vacante</h2>

<div class="d-flex justify-content-between mb-4">
    <form asp-controller="Norma" asp-action="CreeazaNormaVacanta" method="post" class="d-inline">
        <input type="hidden" name="statDeFunctieId" value="@ViewBag.StatDeFunctieId" />
        <button type="submit" class="btn btn-success">
            ➕ Adaugă normă Vacantă
        </button>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">Nu există Norme Vacante pentru acest stat.</div>
}
else
{
    <div class="row row-cols-1 g-4">
        @foreach (var norma in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h4 class="card-title mb-0">Vacant </h4>
                                <h5 class="card-subtitle text-muted">Lector</h5>
                            </div>
                            <a asp-controller="Norma" asp-action="EditareNormaVacanta"
                               asp-route-normaId="@norma.NormaId"
                               asp-route-statDeFunctieId="@ViewBag.StatDeFunctieId"
                               class="btn btn-outline-primary btn-sm mt-1">
                                Editează normă
                            </a>
                        </div>

                        @{
                            double totalOreConv = 0;
                        }

                        <div class="table-responsive">
                            <table class="table table-borderless table-striped align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Disciplina</th>
                                        <th>Program de Studii</th>
                                        <th>An</th>
                                        <th>Nr. Grupe</th>
                                        <th>Nr. Săptămâni</th>
                                        <th>Semestru</th>
                                        <th>Ore Teorie</th>
                                        <th>K*</th>
                                        <th>Ore Practică</th>
                                        <th>K*</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var disciplina in norma.DisciplineActivitati)
                                    {
                                        var oreTeor = ((double)disciplina.ActivitateTeoretica / 2) * (double)disciplina.KCoeficientActTeoretica * (double)disciplina.NumarSaptamaniActivitate / 14.0;
                                        var orePract = ((double)disciplina.ActivitatePractica / 2) * (double)disciplina.NumarGrupe * (double)disciplina.KCoeficientActPractica * (double)disciplina.NumarSaptamaniActivitate / 14.0;
                                        totalOreConv += oreTeor + orePract;

                                        <tr>
                                            <td>@disciplina.DenumireDisciplina</td>
                                            <td>@disciplina.ProgramDeStudiu</td>
                                            <td>@disciplina.AnStudiu</td>
                                            <td>@disciplina.NumarGrupe</td>
                                            <td>@disciplina.NumarSaptamaniActivitate</td>
                                            <td>@disciplina.Semestru</td>
                                            <td>@oreTeor.ToString("0.##")</td>
                                            <td>@disciplina.KCoeficientActTeoretica.ToString("0.##")</td>
                                            <td>@orePract.ToString("0.##")</td>
                                            <td>@disciplina.KCoeficientActPractica.ToString("0.##")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <strong>Total ore convenționale / săptămână:</strong>
                            <span class="text-primary">@totalOreConv.ToString("0.##")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
