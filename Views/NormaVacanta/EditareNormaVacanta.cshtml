@using ManagementulStatelorDeFunctii.ViewModels.NormaVacantaViewModels
@model EditareNormaVacantaViewModel

@{
    ViewData["Title"] = "Editare Normă Vacantă";
}

<div class="container mt-4">
    <a asp-controller="Norma"
       asp-action="AfiseazaNormeVacante"
       asp-route-statDeFunctieId="@Model.StatDeFunctieId"
       class="btn btn-secondary mb-4">
        <i class="bi bi-arrow-left-circle me-1"></i> Înapoi la Norme Vacante
    </a>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Editare Normă Vacantă</h4>
        </div>

        <div class="card-body p-4">
            <h5 class="mb-3">Discipline asociate</h5>

            @if (Model.DisciplineAsociate.Any())
            {
                <ul class="list-group mb-4">
                    @foreach (var disc in Model.DisciplineAsociate)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@disc.Denumire</span>
                            <form asp-action="EliminaDisciplina" method="post" class="mb-0">
                                <input type="hidden" name="disciplinaId" value="@disc.DisciplinaId" />
                                <input type="hidden" name="statDeFunctieId" value="@Model.StatDeFunctieId" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash-fill"></i> Șterge
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-info">Nu există discipline asociate momentan.</div>
            }

            <h5 class="mt-4 mb-3">Adaugă disciplină</h5>

            <form asp-action="AsociazaDisciplinaNormaVacanta" method="get">
                <input type="hidden" name="normaId" value="@Model.NormaId" />
                <input type="hidden" name="statDeFunctieId" value="@Model.StatDeFunctieId" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Disciplină disponibilă</label>
                    <select name="disciplinaId" class="form-select" asp-items="Model.DisciplineDisponibile"></select>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-chevron-right"></i> Continuă spre detalii
                </button>
            </form>
        </div>
    </div>
</div>
